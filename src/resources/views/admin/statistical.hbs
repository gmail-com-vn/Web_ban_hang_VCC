<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-page">
    <div class="content-page">
        <div class="title-nav-page">
            <p class="title-page">
                Thống kê
            </p>
            <ol class="nav-page">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thống kê</li>
            </ol>
        </div>
    </div>

    <div class="div-content row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="div-chart">
                <h3>Biểu đồ doanh thu theo từng tháng</h3>
                <canvas id="revenueChart"></canvas>
            </div>
            <div class="div-chart">
                <h3>Biểu đồ số đơn hàng theo từng tháng</h3>
                <canvas id="ordersChart"></canvas>
            </div>
            <div class="div-chart">
                <h3>Biểu đồ sản phẩm bán chạy</h3>
                <canvas id="productsChart"></canvas>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>


    <script>
        // Lấy dữ liệu đơn hàng và đơn hàng từ biến ordersData và productsData được truyền từ server
        var totalTongTien = {{{ totalTongTien }}};
        var totalDonHang = {{{ totalDonHang }}};
        var productsData = {{{ productsData }}};

        // Vẽ biểu đồ doanh thu
        var ordersChart = new Chart(document.getElementById('revenueChart'), {
            type: 'bar',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                datasets: [{
                    label: 'Doanh thu',
                    data: totalTongTien,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Vẽ biểu đồ đơn hàng
        var ordersChart = new Chart(document.getElementById('ordersChart'), {
            type: 'bar',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                datasets: [{
                    label: 'Số đơn hàng',
                    data: totalDonHang,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Vẽ biểu đồ số đơn hàng
        var productsChart = new Chart(document.getElementById('productsChart'), {
            type: 'bar',
            data: {
                labels: productsData.map(p => p.name),
                datasets: [{
                    label: 'Số lượng',
                    data: productsData.map(p => p.totalSold),
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>