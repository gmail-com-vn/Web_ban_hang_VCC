<div class="container-page">
    <div class="content-page">
        <div class="title-nav-page">
            <p class="title-page">
                Quản lý bài đăng
            </p>
            <ol class="nav-page">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý bài đăng</li>
            </ol>
        </div>
    </div>
    <div class="body-admin">
        <div class="div-trash flex">
            <div class="col-lg-6">
                <button type="button" class="btn btn-secondary btn-trash" data-toggle="tooltip" data-placement="right"
                    title="Thùng rác">
                    <a class="oi oi-trash" href="/admin/quan-ly-bai-dang/thung-rac">({{deletedCount}})</a>
                </button>
            </div>
            <div class="col-lg-6">
                <a class="add-prod item-center" href="/admin/quan-ly-bai-dang/tao-bai-dang"><span
                        class="oi oi-plus"></span>Tạo bài
                    đăng</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        ID
                    </th>
                    <th scope="col">
                        Tiêu đề
                    </th>
                    <th scope="col"></th>
                    <th scope="col" colspan="">Thời gian tạo{{{sortable 'createdAt' _sort}}}</th>
                    <th scope="col" style="padding-left: 35px;">Thao tác</th>

                </tr>
            </thead>
            <tbody style="border-bottom: 1px solid #c0c9d2;">
                {{#each posts}}
                <tr>
                    <th scope="row">
                        {{this._id}}
                    </th>
                    <td>{{this.title}}</td>
                    <td>
                        <img class="card-img-top" src="{{this.imagePost}}" alt="{{this.title}}"
                            style="width: 150px; height: 150px;">
                    </td>
                    <td>{{formatDateTime this.createdAt}}</td>
                    <td>
                        <a href="/admin/quan-ly-bai-dang/{{this._id}}/edit" class="btn btn-success">Sửa</a>
                        <a href="" class="btn btn-remove" data-toggle="modal" data-id="{{this._id}}"
                            data-target="#delete-post-modal">Xóa</a>
                    </td>
                </tr>

                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa đăng bài nào.
                        <a style="color: rgb(28, 158, 11)" href="/admin/quan-ly-bai-dang/tao-bai-dang">Tạo bài đăng</a>
                    </td>
                </tr>

                {{/each}}
            </tbody>
        </table>
        <div id="delete-post-modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Xóa bài đăng?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Bạc chắc chắn muốn xóa bài đăng này</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                        <button id="btn-delete-post" type="button" class="btn btn-danger">Xóa bỏ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<form name="delete-post-form" method="POST"></form>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        let postId;
        const deleteForm = document.forms['delete-post-form']
        const btnDeletepost = document.getElementById('btn-delete-post')

        // When dialog confirm clicked
        $('#delete-post-modal').on('show.bs.modal', function (event) {
            const button = $(event.relatedTarget)
            postId = button.data('id')
        })

        btnDeletepost.onclick = function () {
            deleteForm.action = '/admin/quan-ly-bai-dang/' + postId + '?_method=DELETE'
            deleteForm.submit()
        }
    })

</script>