<div class="container-page">
    <div class="content-page">
        <div class="title-nav-page">
            <p class="title-page">
                Đơn hàng của tôi
            </p>
            <ol class="nav-page">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Đơn hàng của tôi</li>
            </ol>
        </div>
    </div>
    <div style="margin: 0 5%;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        Mã đơn hàng
                    </th>
                    <th scope="col">Sản phẩm</th>
                    <th scope="col">Tên người nhận hàng</th>
                    <th scope="col">SĐT</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">
                        Tổng tiền(VNĐ)
                    </th>
                    <th scope="col">
                        Thời gian đặt hàng
                    </th>
                    <th scope="col">Trạng thái</th>

                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <th scope="row">{{this._id}}</th>
                    <td>
                        {{#each products}}
                        <div style="display: flex; margin: 5px 0">
                            <div>
                                <img src="{{this.product.imageProduct.[0]}}" alt="" style="height: 50px; margin: 7px">
                            </div>
                            <div>
                                <div>{{this.product.name}}: Số lượng {{this.quantity}}</div>
                            </div>
                        </div>
                        {{/each}}
                    </td>
                    <td>{{this.name}}</td>
                    <td>{{this.phone}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.totalMonney}}</td>
                    <td>{{formatDateTime this.createdAt}}</td>
                    <td>{{this.orderStatus}}</td>
                    <td>
                        <div>

                            <a href="" class="btn btn-success" data-toggle="modal" data-id="{{this._id}}"
                                data-target="#order-modal-{{this._id}}">Xem chi tiết</a>

                            <div id="order-modal-{{this._id}}" class="modal" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title flex">Xem chi tết đơn hàng
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <h6>Mã đơn hàng: {{this._id}}</h6>
                                            <h6>Sản phẩm:</h6>
                                            <div class="flex" style="background-color: #f3f3f3;">
                                                {{#each products}}
                                                <div style="display: flex; margin: 5px 0">
                                                    <div>
                                                        <img src="{{this.product.imageProduct.[0]}}" alt=""
                                                            style="height: 50px;">
                                                    </div>
                                                    <div>
                                                        <div>{{this.product.name}}: Số lượng {{this.quantity}}</div>
                                                    </div>
                                                </div>
                                                {{/each}}
                                            </div>
                                            <p>Tên người nhận: {{this.name}}</p>
                                            <p>Số điện thoại: {{this.phone}}</p>
                                            <p>Địa chỉ: {{this.address}}</p>
                                            <p>Tổng tiền: {{this.totalMonney}}</p>
                                            <p>Thời gian đặt hàng: {{formatDateTime this.createdAt}}</p>
                                            <p>Trạng thái đơn hàng: {{this.orderStatus}}</p>
                                            {{!-- <h4 class="text-center">Đánh giá</h4> --}}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>

                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Bạn chưa có đơn đặt hàng nào.
                        <a href="/" style="color:rgb(185, 22, 122)">Quay lại cửa hàng</a>
                    </td>
                </tr>

                {{/each}}
            </tbody>
        </table>
    </div>
</div>